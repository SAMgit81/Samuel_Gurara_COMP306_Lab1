@model Users

@{ ViewData["Title"] = "Home Page"; }

<div class="wrap-form">
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Hi there!</h1>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="LogIn" method="post" class="form-signin">
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email" required>
            <div><span asp-validation-for="UserName" class="text-danger"></span></div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
        </div>

        <div class="form-group align-center">
            <button type="submit" class="btn btn-primary">Log In</button>
            <span class="btn-signup">If you do not have account, Please go to <a asp-controller="Register" asp-action="Register" class="font-weight-bold">sign up!</a></span>
        </div>
    </form>
</div>
